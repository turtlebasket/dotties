; Custom modules

[module/player-simple]

type = custom/script
exec = ~/opt/polybar-scripts/player-mpris-simple.sh
interval = 3
click-left = playerctl previous
click-right = playerctl next
click-middle = playerctl play-pause

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format = <label>
exec = python3 ~/.spotify_status.py -t 15
;format-underline = #ffffff
